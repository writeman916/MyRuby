<% provide(:title, 'Sign up') %>
    <h1 class="title">Sign Up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      		<%= f.label :name %>
		 <%= f.text_field :name, placeholder: "Enter your name", class: "form-control" %>

		<%= f.label :email %>
		 <%= f.text_field :email, placeholder: "Enter your email", class: "form-control" %>

<!-- 	 	<%= f.label :gender %><br />
   	 	<%= f.label :gender, "Male", :value => "Male"  %>
   	 	<%= f.radio_button :gender, true%>
   	 	<%= f.label :gender, "Female", :value => "Female" %>
   	 	<%= f.radio_button :gender, false, :checked => true %> -->

   	 	<%= f.label :password %>
   	 	<%= f.password_field :password, placeholder: "Enter your password",class: "form-control" %>

   	 	<%= f.label :password_confirmation, "Confirmation" %>
   	 	<%= f.password_field :password_confirmation, placeholder: "Enter your confirmation password",class: "form-control" %>


   	 	<%= f.submit "Create my account", class: "btn btn-primary" %>
   	 	<% end %>
   	 </div>
   	</div>